<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0b0909</item>
        <item name="colorPrimaryDark">#0b0909</item>
        <item name="colorAccent">#0b0909</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="rb_pay_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/checked_type_selector</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="rg_money">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="rb_money_check">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/money_checked_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/money_checked_selector_color</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
