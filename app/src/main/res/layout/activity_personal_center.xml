<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.gao.mobilebike.PersonalCenterActivity">

    <FrameLayout
        android:id="@+id/bike"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#41c0dc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="共享单车"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bike">

        <LinearLayout
            android:layout_marginBottom="-100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="#41c0dc"
                    android:src="@drawable/user_profile_grass"/>

                <TextView
                    android:enabled="true"
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/shape_text"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"
                    android:text="登录/注册"
                    android:textColor="#ffffff"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/avatar_default_unlogin"
                    android:id="@+id/circleImageView"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>

                <TextView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="停车点"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hint_card_1"/>

            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:layout_marginTop="-100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共享单车不需要固定的车桩，请将单车停放在路边公共停车区域内，方便他人取用"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>

                <TextView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="停车点"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hint_card_1"/>

            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:layout_marginTop="-100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共享单车不需要固定的车桩，请将单车停放在路边公共停车区域内，方便他人取用"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="预约与计费"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>
            </LinearLayout>

            <ImageView

                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hint_card_2"/>

            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:layout_marginTop="-100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共享单车不需要固定的车桩，请将单车停放在路边公共停车区域内，方便他人取用"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="开锁帮助"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hint_card_3"/>

            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:layout_marginTop="-100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共享单车不需要固定的车桩，请将单车停放在路边公共停车区域内，方便他人取用"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="如何关锁"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hint_card_4"/>

            <TextView
                android:layout_marginTop="-100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共享单车不需要固定的车桩，请将单车停放在路边公共停车区域内，方便他人取用"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="客户服务"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#cecdcd"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hint_card_5"/>

            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="-100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共享单车不需要固定的车桩，请将单车停放在路边公共停车区域内，方便他人取用"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
